{
  "name": "Social-Stream-Backend",
  "version": "1.0.0",
  "description": "social media backend",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "dev": "concurrently \"tsc -w\" \"nodemon index.js\"",
    "build": "npm install && tsc",
    "start-server": "node server.js",
    "tsc": "tsc -w"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 30000
  },
  "author": "ali",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/pdfmake": "^0.2.9",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "multer": "^1.4.5-lts.1",
    "pdfmake": "^0.2.15"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.10.4",
    "@types/nodemon": "^1.19.6",
    "@types/supertest": "^6.0.3",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}